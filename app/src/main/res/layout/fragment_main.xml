<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/ThemeOverlay.ChroniclesOfWW2.FullscreenContainer"
    tools:context=".presentation.ui.fragments.MainFragment"
    android:orientation="vertical"
    android:gravity="center_vertical">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/matching_game_button"
        android:text="@string/match" />

    <Button
        android:id="@+id/web_game_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/web_game"
        />

    <Button
        android:id="@+id/local_game_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/local_game"
        />


    <Button
        android:id="@+id/single_player_game_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/non_network_game"
        />

    <Button android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/settings_button"
        android:text="@string/settings" />


</LinearLayout>