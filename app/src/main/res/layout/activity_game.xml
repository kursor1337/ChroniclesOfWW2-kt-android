<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.activities.GameActivity"
    android:orientation="vertical">

    <com.kursor.chroniclesofww2.presentation.hudViews.DivisionResourcesView
        android:id="@+id/division_resources_enemy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />

    <com.kursor.chroniclesofww2.presentation.hudViews.BoardView
        android:id="@+id/board_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        />

    <com.kursor.chroniclesofww2.presentation.hudViews.DivisionResourcesView
        android:id="@+id/division_resources_me"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>